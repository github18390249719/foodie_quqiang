<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/mine_click_bg"
    android:clickable="false"
    android:gravity="center_vertical">


    <ImageView
        android:id="@+id/mine_login_iv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@mipmap/u991" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp">

        <LinearLayout
            android:id="@+id/mine_login_nickname_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/mine_login_nickname_tv"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:text="屈小强"
                android:textColor="#592C63"
                android:textSize="14sp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/mine_login_setting_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/mine_login_nickname_tv"
                android:layout_weight="1"
                android:src="@mipmap/setting"
                android:tint="#592C63" />


        </LinearLayout>


        <TextView
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_below="@id/mine_login_nickname_ll"
            android:background="#33CCCCCC"
            android:text="个性签名"
            android:textColor="@color/silver" />

    </RelativeLayout>

</LinearLayout>
