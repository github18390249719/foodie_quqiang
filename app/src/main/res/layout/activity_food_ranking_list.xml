<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#B481BB">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/frl_return_iv"
                    android:layout_width="10dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="13dp"
                    android:src="@mipmap/u394" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="美食精选"
                    android:textColor="#ffffff"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/frl_search_iv"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@+id/textView"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="12dp"
                    android:src="@mipmap/u420" />
            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#ffffff"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#B481BB">


            <LinearLayout style="@style/frl_menu_ll_style">

                <TextView
                    android:id="@+id/frl_menu_1_tv"
                    style="@style/frl_menu_ll_tv_style"
                    android:text="全部" />
            </LinearLayout>

            <LinearLayout style="@style/frl_menu_ll_style">

                <TextView
                    android:id="@+id/frl_menu_2_tv"
                    style="@style/frl_menu_ll_tv_style"
                    android:text="川味" />
            </LinearLayout>

            <LinearLayout style="@style/frl_menu_ll_style">

                <TextView
                    android:id="@+id/frl_menu_3_tv"
                    style="@style/frl_menu_ll_tv_style"
                    android:text="湘味" />
            </LinearLayout>

            <LinearLayout style="@style/frl_menu_ll_style">

                <TextView
                    android:id="@+id/frl_menu_4_tv"
                    style="@style/frl_menu_ll_tv_style"
                    android:text="火锅" />
            </LinearLayout>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"
                        android:text="热卖专区"
                        android:textColor="#5E3D50" />

                    <TextView
                        android:id="@+id/frl_best_seller_more_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="11dp"
                        android:layout_toStartOf="@+id/frl_best_seller_more_iv"
                        android:text="更多"
                        android:textColor="#5E3D50" />

                    <ImageView
                        android:id="@+id/frl_best_seller_more_iv"
                        android:layout_width="10dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="24dp"
                        android:src="@mipmap/u465" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#CCCCCC">

                </View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="#F2F2F2">

                    <LinearLayout
                        android:id="@+id/frl_best_seller_more_1_ll"
                        style="@style/frl_best_seller_style">

                        <ImageView
                            style="@style/frl_homepage_menu_iv_style"
                            android:src="@mipmap/u91" />

                        <TextView
                            style="@style/frl_homepage_menu_tv_style"
                            android:text="巧克力蛋糕" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/frl_best_seller_more_2_ll"
                        style="@style/frl_best_seller_style">

                        <ImageView
                            style="@style/frl_homepage_menu_iv_style"
                            android:src="@mipmap/u93" />

                        <TextView
                            style="@style/frl_homepage_menu_tv_style"
                            android:text="韩式拌饭" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/frl_best_seller_more_3_ll"
                        style="@style/frl_best_seller_style">

                        <ImageView
                            style="@style/frl_homepage_menu_iv_style"
                            android:src="@mipmap/u97" />

                        <TextView
                            style="@style/frl_homepage_menu_tv_style"
                            android:text="蜜汁烤鸭" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/frl_best_seller_more_4_ll"
                        style="@style/frl_best_seller_style">

                        <ImageView
                            style="@style/frl_homepage_menu_iv_style"
                            android:src="@mipmap/u99" />

                        <TextView
                            style="@style/frl_homepage_menu_tv_style"
                            android:text="荷香鸡饭" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#CCCCCC">

                </View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:id="@+id/frl_comprehensive_ranking_tv"
                        style="@style/frl_ranking_tv_style"
                        android:text="综合排序" />

                    <TextView
                        android:id="@+id/frl_good_ranking_tv"
                        style="@style/frl_ranking_tv_style"
                        android:text="好评优先" />

                    <TextView
                        android:id="@+id/frl_distance_ranking_tv"
                        style="@style/frl_ranking_tv_style"
                        android:text="距离最近" />

                    <LinearLayout
                        android:id="@+id/frl_screen_ll"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="22dp"
                                android:text="筛选"
                                android:textColor="#5E3D50"
                                android:textSize="12dp" />

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_alignBottom="@+id/textView4"
                                android:layout_marginStart="13dp"
                                android:layout_toEndOf="@+id/textView4"
                                android:src="@mipmap/u488" />
                        </RelativeLayout>

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#CCCCCC">

                </View>

                <LinearLayout
                    android:id="@+id/frl_ranking_fl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"></LinearLayout>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>
</RelativeLayout>