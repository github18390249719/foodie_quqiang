<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/main_title_rl"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/shape">

        <TextView
            android:id="@+id/main_title_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="#592C63"
            android:textSize="14sp"
            android:textStyle="bold"
             />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/main_menu_ll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#F0F0F0"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/main_menu_tv_homepage"
            style="@style/main_menu_tv_style"
            android:drawableTop="@drawable/main_menu_homepage"
            android:text="首页" />

        <TextView
            android:id="@+id/main_menu_tv_perimeter"
            style="@style/main_menu_tv_style"
            android:drawableTop="@drawable/main_menu_perimeter"
            android:text="周边" />

        <TextView
            android:id="@+id/main_menu_tv_mine"
            style="@style/main_menu_tv_style"
            android:drawableTop="@drawable/main_menu_mine"
            android:text="我的" />

    </LinearLayout>

    <FrameLayout
        android:background="#ffffff"
        android:id="@+id/main_content_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/main_menu_ll"
        android:layout_below="@id/main_title_rl">

    </FrameLayout>

</RelativeLayout>
